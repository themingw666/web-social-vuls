<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/css/style.css">  
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Vulnerables Setting</title>
    
    <style>
        .form-select-vul-select-input row option {
            width: 100px;
            padding: 30px;
        }
    </style>
</head>
<body>
    <div class="vul-header">
        <p>Vulnerables Setting</p>
    </div>

    <div id="alert_infor" class="alert alert-success" hidden role="alert">
        <h4 class="alert-heading">Updated Succesfully!</h4>
        <p>Hack this web.</p>
        <hr>
        <p class="mb-0">You will be taken to the home page in <span id="time">3</span> second!</p>
      </div>
    
    <div class="vul-body container">
        <form class="form-vul row" action="/settings/submit?_method=PUT" method="POST">

            <% vul.forEach( vuls => { %>
                <div class="input-group mb-3 vul-select col-md-4">
                    <span class="input-group-text vul-name" style= "width: 100px; height: 30px"  id="basic-addon1"><%= vuls.name %></span>
                    <select name="<%= vuls.name %>" class="form-select-vul-select-input" aria-label="Default select example"> 
                        <option value="None" <%= vuls.status === "None" ? 'selected' : '' %>>None</option>
                        <option value="Easy" <%= vuls.status === "Easy" ? 'selected' : '' %>>Easy</option>
                        <option value="Medium" <%= vuls.status === "Medium" ? 'selected' : '' %>>Medium</option>
                        <option value="Hard" <%= vuls.status === "Hard" ? 'selected' : '' %>>Hard</option>
                        
                    </select>
                </div>
            <% }) %>

            <div class="col-md-12 text-center">
                <button onclick="toggle(this)" type="submit" class="vul-btn btn btn-secondary">Apply</button>
            </div>

            <script>
                let toggle = button => {
                    document.getElementById("alert_infor").removeAttribute("hidden");
                }

                function startTimer(Second, display) {
                    var timer = Second;
                    setInterval(function () {
                        
                        display.textContent = timer;

                        if (--timer < 0) {
                            timer = Second;
                        }
                    }, 1000);
                }

                window.onload = function () {
                    var fiveSecond = 4,
                        display = document.querySelector('#time');
                    startTimer(fiveSecond, display);
                };

            </script>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>